                android:id="@+id/image15Button"
                android:text="Logo Black"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image16Button"
                android:text="Logo White"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image17Button"
                android:text="Logo ZF"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image20Button"
