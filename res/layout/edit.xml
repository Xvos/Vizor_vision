<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/GalleryLayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:id="@+id/editImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </ImageView>

    <HorizontalScrollView
            android:id="@+id/funcScroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00a0a0a0"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:measureWithLargestChild="false">

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AddText"
                    android:text="Text" />

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Image"
                android:id="@+id/imagesButton" />

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/FaceDetectButton"
                    android:text="Face Detect" />

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/FiltersButton"
                    android:text="Filters" />

            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/CropButton"
                    android:text="Crop" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/filterView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-47dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00a0a0a0"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:measureWithLargestChild="false" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noFilterButton"
                android:text="Clear"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/grayScaleButton"
                android:text="GrayScale"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:text="GrayScale"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                android:text="GrayScale"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:text="GrayScale"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button6"
                android:text="GrayScale"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:text="GrayScale"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:text="GrayScale"
                android:layout_marginBottom="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/imageScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-94dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00a0a0a0"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:measureWithLargestChild="false" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image1Button"
                android:text="Image1"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image2Button"
                android:text="Image2"
                android:layout_marginBottom="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button android:text="Save"
            android:id="@+id/SaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </Button>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:editable="true"
        android:background="#00000000"
        android:text=" dfgn ,dm  sgm d,fm g "
        android:gravity="center_horizontal" />

</FrameLayout>

