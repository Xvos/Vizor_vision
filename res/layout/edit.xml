                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image31Button"
                android:text="Vova 1"
                android:layout_marginBottom="0dp"
                android:gravity="clip_vertical" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image32Button"
                android:text="Vova 2"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/image33Button"
