<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/GalleryLayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="false"
    android:focusable="false">

    <ImageView
            android:id="@+id/editImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </ImageView>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <HorizontalScrollView
                android:id="@+id/funcScroll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="bottom"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#00a0a0a0"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:measureWithLargestChild="false"
                android:id="@+id/funcList">

                <Button
                        android:layout_width="100dp"
                        android:layout_height="55dp"
                        android:id="@+id/AddText"
                        android:text="   TEXT"
                    android:background="@drawable/bg"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="center_vertical|left" />

                <Button
                        android:layout_width="101dp"
                        android:layout_height="55dp"
                        android:text="   IMAGE"
                    android:id="@+id/imagesButton"
                    android:background="@drawable/bg"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textAlignment="1"
                    android:gravity="center_vertical|left" />

                <Button
                        android:layout_width="101dp"
                        android:layout_height="55dp"
                        android:id="@+id/FiltersButton"
                        android:text="FILTERS"
                    android:background="@drawable/bg"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textAlignment="1"
                    android:gravity="center_vertical|left" />

                <Button
                        android:layout_width="101dp"
                        android:layout_height="55dp"
                        android:id="@+id/CropButton"
                        android:text="   CROP"
                    android:background="@drawable/bg"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:textAlignment="1"
                    android:gravity="center_vertical|left" />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/SaveButton"
                android:layout_width="76dp"
                android:layout_height="73dp"
            android:background="@drawable/save"
            android:layout_gravity="right|top">
        </Button>

    </FrameLayout>

    <HorizontalScrollView
        android:id="@+id/filterView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-47dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00a0a0a0"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:measureWithLargestChild="false" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noFilterButton"
                android:text="Clear"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterButton1"
                android:text="Filter 1"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterButton2"
                android:text="Filter 2"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterButton3"
                android:text="Filter 3"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterButton4"
                android:text="Filter 4"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterButton5"
                android:text="Filter 5"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterButton6"
                android:text="Filter 6"
                android:layout_marginBottom="0dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterButton7"
                android:text="Filter 7"
                android:layout_marginBottom="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/imageScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-94dp" >

        <LinearLayout
